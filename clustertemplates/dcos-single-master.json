{
  "name": "dcos-single-master",
  "description": "DC/OS cluster with a single master",
  "defaults": {
    "services": [
      "dcos-master",
      "dcos-slave"
    ],
    "provider": "google",
    "hardwaretype": "standard-xlarge",
    "imagetype": "centos7",
    "config": {
      "dcos": {
        "config": {
          "cluster_name": "dcos",
          "master_list": ["%ip.bind_v4.service.dcos-master%"]
        },
        "dcos_version": "1.11.0",
        "ip-detect": "gcp"
      }
    }
  },
  "compatibility": {
    "hardwaretypes": [
      "standard-xlarge",
      "standard-2xlarge"
    ],
    "imagetypes": [
      "centos7"
    ],
    "services": [
      "dcos-master",
      "dcos-slave",
      "dcos-slave-public"
    ]
  },
  "administration": {
    "leaseduration": {
      "initial":0,
      "max":0,
      "step":0
    }
  },
  "constraints": {
    "size": {
      "min": 3,
      "max": 100
    },
    "layout": {
      "cantcoexist": [
        [
          "dcos-master",
          "dcos-slave",
          "dcos-slave-public"
        ]
      ]
    },
    "services": {
      "dcos-master": {
        "quantities": {
          "min": 1,
          "max": 1
        }
      },
      "dcos-slave": {
        "quantities": {
          "min": 1
        }
      },
      "dcos-slave-public": {
        "quantities": {
          "min": 0,
          "max": 1
        }
      }
    }
  },
  "links": [
    {
      "label": "DC/OS UI",
      "url": "http://%ip.access_v4.service.dcos-master%"
    }
  ]
}
