{
  "name": "cdap-distributed",
  "description": "Cask Data Application Platform (CDAP) on a Hadoop cluster",
  "defaults": {
    "services": [
      "base",
      "hadoop-hdfs-namenode",
      "hadoop-hdfs-datanode",
      "hadoop-yarn-resourcemanager",
      "hadoop-yarn-nodemanager",
      "hadoop-mapreduce-historyserver",
      "zookeeper-server",
      "hbase-master",
      "hbase-regionserver",
      "mysql-server",
      "hive-metastore-database",
      "hive-metastore",
      "cdap"
    ],
    "provider": "rackspace",
    "hardwaretype": "standard-large",
    "imagetype": "ubuntu12",
    "config": {
      "hadoop": {
        "core_site": {
          "fs.defaultFS": "hdfs://%host.service.hadoop-hdfs-namenode%",
          "io.file.buffer.size": "131072",
          "hadoop.tmp.dir": "/data/hadoop"
        },
        "hadoop_env": {
          "hadoop_log_dir": "/data/logs/hadoop-hdfs"
        },
        "hdfs_site": {
          "dfs.datanode.max.transfer.threads": "4096",
          "dfs.replication": "2",
          "dfs.blocksize": "134217728",
          "dfs.namenode.handler.count": "30",
          "dfs.datanode.handler.count": "8",
          "dfs.datanode.du.reserved": "1073741824",
          "dfs.namenode.rpc-bind-host": "%ip.bind_v4.self%",
          "dfs.namenode.servicerpc-bind-host": "%ip.bind_v4.self%",
          "dfs.namenode.datanode.registration.ip-hostname-check": "false"
        },
        "mapred_env": {
          "hadoop_mapred_log_dir": "/data/logs/hadoop-mapreduce"
        },
        "mapred_site": {
          "mapreduce.framework.name": "yarn",
          "mapreduce.map.java.opts": "-Xmx384m",
          "mapreduce.reduce.java.opts": "-Xmx384m",
          "mapreduce.job.maps": "3",
          "mapreduce.job.reduces": "3",
          "mapreduce.task.io.sort.factor": "25",
          "mapreduce.task.io.sort.mb": "250",
          "mapreduce.jobhistory.address": "%ip.bind_v4.service.hadoop-mapreduce-historyserver%:10020"
        },
        "yarn": {
          "memory_percent": "75"
        },
        "yarn_env": {
          "yarn_log_dir": "/data/logs/hadoop-yarn"
        },
        "yarn_site": {
          "yarn.nodemanager.local-dirs": "/data/yarn/local",
          "yarn.nodemanager.log-dirs": "/data/logs/hadoop-yarn/userlogs",
          "yarn.resourcemanager.hostname": "%host.service.hadoop-yarn-resourcemanager%",
          "yarn.resourcemanager.scheduler.address": "%host.service.hadoop-yarn-resourcemanager%:8030",
          "yarn.resourcemanager.resource-tracker.address": "%host.service.hadoop-yarn-resourcemanager%:8031",
          "yarn.resourcemanager.address": "%host.service.hadoop-yarn-resourcemanager%:8032",
          "yarn.resourcemanager.admin.address": "%host.service.hadoop-yarn-resourcemanager%:8033"
        }
      },
      "hbase": {
        "hbase_env": {
          "hbase_log_dir": "/data/logs/hbase"
        },
        "hbase_site": {
          "hbase.rootdir": "hdfs://%host.service.hadoop-hdfs-namenode%/hbase",
          "hbase.cluster.distributed": "true",
          "hbase.zookeeper.quorum": "%join(map(host.service.zookeeper-server,'$:2181'),',')%",
          "hbase.regionserver.handler.count": "100",
          "zookeeper.session.timeout": "60000"
        }
      },
      "hive": {
        "hive_env": {
          "hive_log_dir": "/data/logs/hive"
        },
        "hive_site": {
          "javax.jdo.option.ConnectionURL": "jdbc:mysql://%ip.bind_v4.service.mysql-server%:3306/hive?createDatabaseIfNotExist=true",
          "javax.jdo.option.ConnectionDriverName": "com.mysql.jdbc.Driver",
          "javax.jdo.option.ConnectionUserName": "dbuser",
          "javax.jdo.option.ConnectionPassword": "dbuserpassword",
          "hive.metastore.uris": "%join(map(ip.bind_v4.service.hive-metastore,'thrift://$:9083'),',')%",
          "hive.zookeeper.quorum": "%join(map(host.service.zookeeper-server,'$'),',')%",
          "hive.support.concurrency": "true"
        }
      },
      "coopr_mysql": {
        "mysql_service": {
          "hivedb": {
            "bind_address": "%ip.bind_v4.service.mysql-server%",
            "data_dir": "/data/mysql",
            "initial_root_password": "somedefaultpassword",
            "port": "3306"
          }
        }
      },
      "mysql": {
        "server_root_password": "somedefaultpassword"
      },
      "cdap": {
        "cdap_site": {
          "kerberos.auth.enabled": "false",
          "log.saver.run.memory.megs": "512",
          "gateway.memory.mb": "512",
          "dataset.executor.container.memory.mb": "512",
          "explore.executor.container.memory.mb": "1024",
          "kafka.seed.brokers": "%join(map(host.service.cdap,'$:9092'),',')%",
          "zookeeper.quorum": "%join(map(host.service.zookeeper-server,'$:2181'),',')%/cdap",
          "root.namespace": "cdap",
          "kafka.default.replication.factor": "1",
          "explore.enabled": "true"
        }
      },
      "zookeeper": {
        "zookeeper_env": {
          "zookeeper_log_dir": "/data/logs/zookeeper"
        },
        "zoocfg": {
          "maxClientCnxns": "100",
          "tickTime": "2000",
          "initLimit": "10",
          "syncLimit": "2"
        }
      }
    }
  },
  "compatibility": {
    "hardwaretypes": [
      "standard-large",
      "standard-xlarge",
      "standard-2xlarge"
    ],
    "imagetypes": [
      "centos6",
      "ubuntu12"
    ],
    "services": [
      "base",
      "hadoop-hdfs-namenode",
      "hadoop-hdfs-datanode",
      "hadoop-yarn-resourcemanager",
      "hadoop-yarn-nodemanager",
      "hadoop-mapreduce-historyserver",
      "zookeeper-server",
      "hbase-master",
      "hbase-regionserver",
      "cdap",
      "cdap-security",
      "mysql-server",
      "hive-metastore-database",
      "hive-metastore",
      "hive-server2",
      "spark-historyserver"
    ]
  },
  "constraints": {
    "size": {
      "min": 3,
      "max": 100
    },
    "layout": {
      "mustcoexist": [
        [
          "hadoop-hdfs-datanode",
          "hadoop-yarn-nodemanager",
          "hbase-regionserver"
        ],
        [
          "hadoop-hdfs-namenode",
          "hadoop-yarn-resourcemanager",
          "hadoop-mapreduce-historyserver",
          "spark-historyserver",
          "hbase-master",
          "mysql-server",
          "zookeeper-server",
          "cdap",
          "cdap-security",
          "mysql-server",
          "hive-metastore",
          "hive-metastore-database"
        ]
      ],
      "cantcoexist": [
        [
          "hadoop-hdfs-namenode",
          "hadoop-hdfs-datanode"
        ],
        [
          "hadoop-hdfs-datanode",
          "cdap"
        ],
        [
          "hadoop-yarn-resourcemanager",
          "hadoop-yarn-nodemanager"
        ],
        [
          "hive-server2",
          "cdap"
        ]
      ]
    },
    "services": {
      "hadoop-hdfs-namenode": {
        "quantities": {
          "min": 1,
          "max": 1
        }
      },
      "hadoop-yarn-resourcemanager": {
        "quantities": {
          "min": 1,
          "max": 1
        }
      },
      "hadoop-mapreduce-historyserver": {
        "quantities": {
          "min": 1,
          "max": 1
        }
      },
      "zookeeper-server": {
        "quantities": {
          "min": 1,
          "max": 1
        }
      },
      "hbase-master": {
        "quantities": {
          "min": 1,
          "max": 1
        }
      },
      "cdap": {
        "quantities": {
          "min": 1,
          "max": 1
        }
      },
      "cdap-security": {
        "quantities": {
          "min": 1,
          "max": 1
        }
      },
      "mysql-server": {
        "quantities": {
          "min": 1,
          "max": 1
        }
      },
      "hadoop-hdfs-datanode": {
        "quantities": {
          "min": 2,
          "max": 99
        }
      }
    }
  },
  "links": [
    {
      "label": "Hadoop HDFS NameNode UI",
      "url": "http://%ip.access_v4.service.hadoop-hdfs-namenode%:50070"
    },
    {
      "label": "Hadoop YARN ResourceManager UI",
      "url": "http://%ip.access_v4.service.hadoop-yarn-resourcemanager%:8088"
    },
    {
      "label": "Hadoop MapReduce HistoryServer UI",
      "url": "http://%ip.access_v4.service.hadoop-mapreduce-historyserver%:10020"
    },
    {
      "label": "HBase Master UI",
      "url": "http://%ip.access_v4.service.hbase-master%:60010"
    },
    {
      "label": "CDAP UI",
      "url": "http://%ip.access_v4.service.cdap%:9999"
    }
  ]
}
